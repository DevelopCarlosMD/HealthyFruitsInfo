<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_container_horizontal"
    android:layout_marginLeft="@dimen/margin_container_vertical"
    android:layout_marginRight="@dimen/margin_container_vertical"
    android:layout_marginTop="@dimen/margin_container_horizontal"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_image_juice_fruit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/image_recipe_ini" />

        <TextView
            android:id="@+id/card_title_juice_fruit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignBottom="@+id/card_image_juice_fruit"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginStart="@dimen/md_keylines"
            android:text="Green Juice"
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/card_text_juice_fruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_image_juice_fruit"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Try it!"
            android:text="Green Juice"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading" />

        <Button
            android:id="@+id/card_button_action"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text_juice_fruit"
            android:text="Try it!!"
            android:textColor="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/share_button"
            android:background="@android:color/white"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_text_juice_fruit"
            android:layout_marginEnd="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:src="@drawable/ic_share"
            android:tint="@color/button_grey" />

        <ImageButton
            android:id="@+id/favorite_button"
            android:background="@android:color/white"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_below="@+id/card_text_juice_fruit"
            android:layout_marginEnd="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_toLeftOf="@id/share_button"
            android:layout_toStartOf="@id/share_button"
            android:src="@drawable/ic_favorite"
            android:tint="@color/button_grey" />

    </RelativeLayout>

</android.support.v7.widget.CardView>